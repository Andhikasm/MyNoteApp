<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ecf0f1"
    tools:context="com.example.andhika.mynote.NoteDetailActivity">

    <EditText
        android:id="@+id/detailsTitle"
        android:layout_centerHorizontal="true"
        android:hint="My Title"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:background="#ecf0f1"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_width="250dp"
        android:cursorVisible="false"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/detailsContent"
        android:layout_marginTop="30dp"
        android:hint="My note..."
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detailsTitle"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:background="@android:color/transparent"
        android:layout_width="250dp"
        android:cursorVisible="false"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/detailsDateText"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detailsContent"
        android:text="Date here..."
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_below="@+id/detailsDateText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
